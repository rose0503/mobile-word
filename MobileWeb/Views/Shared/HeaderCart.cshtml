@model List<MobileWeb.Models.CartItem>
@{
    var session = (MobileWeb.Common.UserLogin)Session[MobileWeb.Common.CommonConstants.USER_SESSION];
}
@if (session == null)
{
    <div class="cart">
        <p>
            <a href="/gio-hang" style="text-decoration:none">Giỏ hàng:</a><div id="dd" class="wrapper-dropdown-2">
                @Model.Count sản phẩm
                <ul class="dropdown">
                    @if (@Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <li>@item.Product.Name</li>
                        }
                    }
                    else
                    {
                        <li>Bạn chưa có sản phẩm nào trong giỏ</li>
                    }
                </ul>
            </div>
        </p>
    </div>

}
else
{
    
    <div class="cart">
        <p>
            <a href="/Order/Index" style="text-decoration:none">Đơn hàng của tôi</a>
        </p>
    </div>
    <span>--</span>
    <div class="cart">
        <p>
            <a href="/gio-hang" style="text-decoration:none">Giỏ hàng:</a><div id="dd" class="wrapper-dropdown-2">
                @Model.Count sản phẩm
                <ul class="dropdown">
                    @if (@Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <li>@item.Product.Name</li>
                        }
                    }
                    else
                    {
                        <li>Bạn chưa có sản phẩm nào trong giỏ</li>
                    }
                </ul>
            </div>
        </p>
    </div>

}