@model List<Model.EF.Menu>
<div class="account_desc">
    @{
        var session = (MobileWeb.Common.UserLogin)Session[MobileWeb.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }

        </ul>
    }
    else
    {
        
        <ul>
            <li>Tài khoản: </li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    @*<i class="fa fa-user fa-fw" ></i>*@@session.UserName  @*<i class="fa fa-caret-down"></i>*@
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="/User/Edit/@session.UserID"><i class="fa fa-user fa-fw"></i> User Profile</a>
                    </li>
                    
                    <li class="divider"></li>
                    <li>
                        <a href="/User/Logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>            
            
        </ul>
    }

</div>
<div class="clear"></div>

