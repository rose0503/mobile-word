@model PagedList.IPagedList<Model.EF.Order>
@using PagedList.Mvc;
@{
                /**/

                ViewBag.Title = "Danh sách Đơn thành công";
                Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách đơn hàng thành công
}
<div class="row">
    <div class="col-lg-12">
        <div class="">
            
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("IndexFinish", "Order", FormMethod.Get))
                    {
                        <div class="row form-group">
                            <div class="col-lg-12">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success">Tìm kiếm</button>

                                </div>
                            </div>
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>SDT</th>
                                    <th>Địa chỉ</th>
                                    <th>Trạng thái</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {                                    
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.ShipName</td>
                                    <td>@item.ShipEmail</td>
                                    <td>@item.ShipMobile</td>
                                    <td>@item.ShipAddress</td>

                                    @{ if (@item.Status == 4)
                                        {
                                            <td> Giao thành công</td>
                                        }

                                    }


                                </tr>
                                    
                                }

                            </tbody>
                        </table>
                        
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            
        </div>
    </div>
</div>